{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["ES2020", "DOM"],
    "resolveJsonModule": true,
    "allowImportingTsExtensions": false,
    "rewriteRelativeImportExtensions": false
  },
  "include": ["src/**/*"]
}
