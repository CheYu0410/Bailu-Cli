{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",           // [重要] 改成 NodeNext 以支援 Node.js 的 ESM
    "moduleResolution": "NodeNext", // [重要] 配合 Node.js 的解析規則
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["ES2020", "DOM"],
    "resolveJsonModule": true,
    "allowImportingTsExtensions": false,
    "rewriteRelativeImportExtensions": false
  },
  "include": ["src/**/*"]
}
